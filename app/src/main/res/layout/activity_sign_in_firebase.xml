<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignInFirebaseActivity">

    <ImageView
        android:id="@+id/start_care_plant"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_care_plants1" />

    <TextView
        android:id="@+id/intro_splash"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_care_plant"
        android:layout_centerInParent="true"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="@string/splash_intro"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#000000"
        android:textSize="25dp" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/signInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro_splash"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp" />
</RelativeLayout>