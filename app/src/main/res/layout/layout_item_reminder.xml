<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:layout_margin="15dp"
    android:orientation="vertical"
    android:padding="15dp"
    app:cardCornerRadius="5dp"
    app:cardMaxElevation="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/reminder_picture_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:padding="30dp" />

        <TextView
            android:id="@+id/reminder_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@id/reminder_picture_view"
            android:fontFamily="@font/roboto_medium"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/reminder_watering_freq_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reminder_name_view"
            android:layout_marginStart="15dp"
            android:layout_toRightOf="@id/reminder_picture_view"
            android:fontFamily="@font/roboto"
            android:text="Water every period of time"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/reminder_last_watered_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reminder_watering_freq_view"
            android:layout_marginStart="15dp"
            android:layout_toRightOf="@id/reminder_picture_view"
            android:fontFamily="@font/roboto"
            android:text="Last watered in date"
            android:textSize="16sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>